<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <FrameLayout
        android:id="@+id/activity_main_fl_container"
        android:layout_width="@dimen/ui_zero"
        android:layout_height="@dimen/ui_zero"
        android:layout_gravity="center_horizontal"
        app:layout_constraintBottom_toTopOf="@id/button_connect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/button_connect"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_default_height"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_connect"
        android:text="@string/connect"
        android:textColor="@color/color_tertiary_text"
        android:textSize="@dimen/text_primary_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:targetApi="lollipop" />

</android.support.constraint.ConstraintLayout>
