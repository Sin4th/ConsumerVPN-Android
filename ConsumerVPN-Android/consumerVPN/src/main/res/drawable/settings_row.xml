<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Focused -->
    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/settings_row_focused_color" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/settings_row_pressed_color" />
        </shape>
    </item>

    <!-- Normal -->
    <item android:state_enabled="true">
        <shape>
            <solid android:color="@color/settings_row_color" />
        </shape>
    </item>

</selector>